<% provide(:title, 'movie') %>
<div class="container-fluid">
  <div class="card">
    <%= poster_for_path @movie.tmdb_poster_path, @movie.title, size:300 %>
    <div class="card-container">
      <h4><b><%= "#{@movie.title} (#{@movie.year})" %></b></h4> 
      <%= link_to "imdb", "http://www.imdb.com/title/#{@movie.imdb_id}/", target: '_blank' %>
    </div>
  </div>
</div>