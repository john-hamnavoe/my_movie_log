<div class="col-sm-6">
  <li class="list-group-item clearfix">
      <div class="row">
    	<div class="col-sm-2">
    	   <%= poster_for_path movie.tmdb_poster_path, movie.title %>
    	</div>
      <div class="col-sm-10">
        <h4><%= link_to movie.title, movie %></h4>
        <p><%= "#{movie.year}" %></p>
        <hr style="margin-bottom: 0.5em;">
        <span class="pull-left">
          <% if logged_in? %>
            <%= link_to "<button type=\"button\"><i class=\"fa fa-pencil-square-o\"></i></button>".html_safe, edit_movie_path(movie.id)%>
            <%= link_to "<button type=\"button\"><i class=\"fa fa-eye\"></i></button>".html_safe, new_watch_path(movie_id: movie.id)%>
          <% end %>
        </span>
      </div>   
      </div>
  </li>
</div>
