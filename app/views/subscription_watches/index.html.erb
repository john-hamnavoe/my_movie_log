<% provide(:title, 'subscription watches') %>

<%= link_to "back to subscription", subscription_path(@subscription_id) %>
<div class="container">
  <div class="media-list my-5">
    <h4><small>watches</small></h4>
    <div class="row">
      <div class="col-md-9">
      <table class= table>
        <tr>
          <th class="poster-column"></th>
          <th class="title">title</th>
          <th>rating</th> 
          <th>date</th>
        </tr>
        <% @subscription_watches.each do |sw| %>
          <%= render 'subscription_watch', watch: sw %>
        <% end %>
      </table>
      </div>
    </div>
    
    <div class="digg_pagination">
    <%= will_paginate @subscription_watches %>
    </div>
</div>
</div>
