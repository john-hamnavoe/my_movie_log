<%= form_for(@movie) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :year %>
  <%= f.text_field :year, class: 'form-control' %>
      
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>